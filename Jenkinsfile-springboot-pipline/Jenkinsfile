pipeline {
    agent any
    
    tools {
        maven 'M3'
        jdk 'jdk17'
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'üöÄ Clonage du d√©p√¥t...'
                    git branch: 'main',
                         url: 'https://github.com/ornellamabin/jenkins-mini-projet.git',
                         credentialsId: 'github-credentials',
                         extensions: [
                             [$class: 'CloneOption', 
                              depth: 1, 
                              shallow: true,
                              noTags: false,
                              timeout: 60]
                         ]
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    echo 'üî® Construction du projet...'
                    // CORRECTION : utiliser le bon dossier springbootapp
                    dir('springbootapp') {
                        sh 'mvn clean compile'
                    }
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    echo 'üß™ Ex√©cution des tests...'
                    dir('springbootapp') {
                        sh 'mvn test'
                    }
                }
            }
        }
        
        stage('Package') {
            steps {
                script {
                    echo 'üì¶ Packaging de l application...'
                    dir('springbootapp') {
                        sh 'mvn package -DskipTests'
                    }
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    echo 'üöÄ D√©ploiement...'
                    dir('springbootapp') {
                        echo 'D√©ploiement r√©ussi!'
                        archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'üßπ Nettoyage...'
            cleanWs()
        }
        success {
            echo '‚úÖ Pipeline ex√©cut√© avec succ√®s!'
        }
        failure {
            echo '‚ùå √âchec du pipeline!'
        }
    }
}