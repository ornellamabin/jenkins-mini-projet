pipeline {
    agent any
    
    tools {
        maven 'M3'  // Configurez Maven dans Jenkins â†’ Outils globaux
        jdk 'JDK11' // Configurez JDK dans Jenkins â†’ Outils globaux
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'ğŸš€ Clonage du dÃ©pÃ´t...'
                    git branch: 'main',
                         url: 'https://github.com/ornellamabin/jenkins-mini-projet.git',
