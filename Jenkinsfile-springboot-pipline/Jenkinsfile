pipeline {
    agent any
    
    tools {
        maven 'M3'  // Configurez Maven dans Jenkins → Outils globaux
        jdk 'JDK11' // Configurez JDK dans Jenkins → Outils globaux
    }
    
    options {
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    echo '🚀 Clonage du dépôt...'
                    git branch: 'main',
                         url: 'https://github.com/ornellamabin/jenkins-mini-projet.git',
                         credentialsId: 'github-credentials',
                         extensions: [
                             [$class: 'CloneOption', 
                              depth: 1, 
                              shallow: true,
                              noTags: false,
                              timeout: 60]
                         ]
                }
            }
        }
        
        stage('Build') {
            steps {
                script {
                    echo '🔨 Construction du projet...'
                    sh 'mvn --version'  // Test d'abord
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    echo '🧪 Exécution des tests...'
                    sh 'mvn test'
                }
            }
        }
        
        stage('Package') {
            steps {
                script {
                    echo '📦 Packaging de l application...'
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    echo '🚀 Déploiement...'
                    echo 'Déploiement réussi!'
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
    }
    
    post {
        always {
            echo '🧹 Nettoyage...'
            cleanWs()
        }
        success {
            echo '✅ Pipeline exécuté avec succès!'
        }
        failure {
            echo '❌ Échec du pipeline!'
        }
    }
}