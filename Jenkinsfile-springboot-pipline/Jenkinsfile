pipeline {
    agent any
    
    stages {
        stage('Test') {
            steps {
                echo "Test de pipeline..."
            }
        }
    }
    
    post {
        always {
            slackSend(
                webhookUrl: 'https://hooks.slack.com/services/VOTRE/URL/WEBHOOK',
                channel: '#jenkins',
                message: "Build ${currentBuild.result?: 'SUCCESS'} - ${env.JOB_NAME} #${env.BUILD_NUMBER}"
            )
        }
    }
}